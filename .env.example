# ===========================================
# Brain - Environment Variables Configuration
# ===========================================
# Copia este archivo a .env y ajusta los valores según tu entorno
# cp .env.example .env

# ===========================================
# App General
# ===========================================
DEBUG=true
LOG_LEVEL=info

# ===========================================
# Puertos de Servicios
# ===========================================
API_PORT=8000
GUI_PORT=4200
POSTGRES_PORT=5432
REDIS_PORT=6379

# ===========================================
# PostgreSQL (+ pgvector)
# ===========================================
POSTGRES_USER=brain
POSTGRES_PASSWORD=brain_secret
POSTGRES_DB=brain_db

# ===========================================
# JWT Secrets (para autenticación)
# ===========================================
# IMPORTANTE: Cambiar estos valores en producción
# Generar con: openssl rand -base64 32
JWT_SECRET=brain-jwt-secret-dev-only
