      "min": 1,
      "max": 100
    },
    "allowAbsolutePaths": {
      "type": "boolean",
      "default": false
    },
    "readEnabled": {
      "type": "boolean",
      "default": true
    },
    "writeEnabled": {
      "type": "boolean",
      "default": true
    },
    "editEnabled": {
      "type": "boolean",
      "default": true
    },
    "listEnabled": {
      "type": "boolean",
      "default": true
    },
    "searchEnabled": {
      "type": "boolean",
      "default": true
    }
  }
}
