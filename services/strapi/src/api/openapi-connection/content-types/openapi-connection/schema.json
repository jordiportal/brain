{
  "kind": "collectionType",
  "collectionName": "openapi_connections",
  "info": {
    "singularName": "openapi-connection",
    "pluralName": "openapi-connections",
    "displayName": "OpenAPI Connection",
    "description": "Conexiones a servicios externos via OpenAPI/Swagger"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "text"
    },
    "specUrl": {
      "type": "string",
      "required": true
    },
    "baseUrl": {
      "type": "string",
      "required": true
    },
    "authType": {
      "type": "enumeration",
      "enum": ["none", "bearer", "apikey", "basic", "oauth2"],
      "default": "none"
    },
    "authToken": {
      "type": "string",
      "private": true
    },
    "authHeader": {
      "type": "string",
      "default": "Authorization"
    },
    "authPrefix": {
      "type": "string",
      "default": "Bearer"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "timeout": {
      "type": "integer",
      "default": 30000
    },
    "enabledEndpoints": {
      "type": "json"
    },
    "customHeaders": {
      "type": "json"
    },
    "lastSyncAt": {
      "type": "datetime"
    },
    "cachedSpec": {
      "type": "json"
    }
  }
}
