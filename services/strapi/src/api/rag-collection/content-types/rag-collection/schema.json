{
  "kind": "collectionType",
  "collectionName": "rag_collections",
  "info": {
    "singularName": "rag-collection",
    "pluralName": "rag-collections",
    "displayName": "RAG Collection",
    "description": "Colecciones de documentos para RAG"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "embeddingModel": {
      "type": "string",
      "default": "qwen3-embedding:8b"
    },
    "chunkSize": {
      "type": "integer",
      "default": 500,
      "min": 100,
      "max": 4000
    },
    "chunkOverlap": {
      "type": "integer",
      "default": 50,
      "min": 0,
      "max": 500
    },
    "documentCount": {
      "type": "integer",
      "default": 0
    },
    "totalChunks": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "metadata": {
      "type": "json"
    },
    "documents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::rag-document.rag-document",
      "mappedBy": "collection"
    }
  }
}
