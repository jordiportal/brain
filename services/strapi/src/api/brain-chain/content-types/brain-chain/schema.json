{
  "kind": "collectionType",
  "collectionName": "brain_chains",
  "info": {
    "singularName": "brain-chain",
    "pluralName": "brain-chains",
    "displayName": "Brain Chain",
    "description": "Definiciones de cadenas de pensamiento y grafos LangGraph"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "type": {
      "type": "enumeration",
      "enum": ["chain", "graph", "agent", "rag", "conversational", "tools"],
      "required": true,
      "default": "agent"
    },
    "description": {
      "type": "text"
    },
    "version": {
      "type": "string",
      "default": "1.0.0"
    },
    "definition": {
      "type": "json",
      "required": false
    },
    "prompts": {
      "type": "json",
      "description": "Diccionario de prompts {key: {template, description, variables}}"
    },
    "tools": {
      "type": "json",
      "description": "Lista de herramientas disponibles para el agente"
    },
    "nodes": {
      "type": "json"
    },
    "edges": {
      "type": "json"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "handlerType": {
      "type": "enumeration",
      "enum": ["generic", "legacy"],
      "default": "generic",
      "description": "Tipo de builder a usar: generic (nuevo) o legacy (Python hardcoded)"
    },
    "legacyBuilderId": {
      "type": "string",
      "description": "ID del builder legacy para fallback (conversational, rag, tool_agent, etc.)"
    },
    "llmProvider": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::llm-provider.llm-provider"
    },
    "config": {
      "type": "json"
    },
    "tags": {
      "type": "json"
    }
  }
}
