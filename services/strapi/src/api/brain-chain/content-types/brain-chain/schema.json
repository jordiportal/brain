{
  "kind": "collectionType",
  "collectionName": "brain_chains",
  "info": {
    "singularName": "brain-chain",
    "pluralName": "brain-chains",
    "displayName": "Brain Chain",
    "description": "Definiciones de cadenas de pensamiento y grafos LangGraph"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "type": {
      "type": "enumeration",
      "enum": ["chain", "graph", "agent", "rag"],
      "required": true,
      "default": "graph"
    },
    "description": {
      "type": "text"
    },
    "version": {
      "type": "string",
      "default": "1.0.0"
    },
    "definition": {
      "type": "json",
      "required": true
    },
    "nodes": {
      "type": "json"
    },
    "edges": {
      "type": "json"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "llmProvider": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::llm-provider.llm-provider"
    },
    "config": {
      "type": "json"
    },
    "tags": {
      "type": "json"
    }
  }
}
