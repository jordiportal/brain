# ===========================================
# Brain - Environment Variables Configuration
# ===========================================
# Copia este archivo a .env y ajusta los valores según tu entorno
# cp .env.example .env

# ===========================================
# App General
# ===========================================
DEBUG=true
LOG_LEVEL=info

# ===========================================
# Puertos de Servicios
# ===========================================
API_PORT=8000
STRAPI_PORT=1337
GUI_PORT=4200
POSTGRES_PORT=5432
REDIS_PORT=6379

# ===========================================
# PostgreSQL (+ pgvector)
# ===========================================
POSTGRES_USER=brain
POSTGRES_PASSWORD=brain_secret
POSTGRES_DB=brain_db

# ===========================================
# Ollama (LLM Externo)
# ===========================================
# Desde Docker, usar host.docker.internal para acceder al host
OLLAMA_BASE_URL=http://host.docker.internal:11434

# ===========================================
# Strapi CMS Secrets
# ===========================================
# IMPORTANTE: Cambiar estos valores en producción
# Generar con: openssl rand -base64 32
JWT_SECRET=brain-jwt-secret-dev-only
ADMIN_JWT_SECRET=brain-admin-jwt-secret-dev-only
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=brain-api-token-salt-dev
TRANSFER_TOKEN_SALT=brain-transfer-token-salt-dev
